<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SpeechRecognitionApp.AssistantCommands"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="AssistantCommands">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Margin="20,10,10,10" Text="Assistant commands" FontSize="20" FontWeight="Bold" Foreground="DarkSlateBlue"/>
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Question:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center" FontWeight="SemiBold"/>
            <TextBox x:Name="QuestionTextBox" Grid.Row="0" Grid.Column="1" Margin="5" Padding="5"/>

            <TextBlock Text="Answer:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center" FontWeight="SemiBold"/>
            <TextBox x:Name="AnswerTextBox" Grid.Row="1" Grid.Column="1" Margin="5" Padding="5"/>

            <Button Content="Add Command" Grid.Row="2" Grid.Column="0" Margin="5" Click="AddCommand_Click" Background="DarkSlateBlue" Foreground="White" Padding="5"/>
            <TextBlock x:Name="AddingMessage" Grid.Row="2" Grid.Column="1" Margin="5" VerticalAlignment="Center" Foreground="Red"/>

            <TextBlock Text="Search:" Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Center" FontWeight="SemiBold"/>
            <TextBox x:Name="SearchTextBox" Grid.Row="3" Grid.Column="1" Margin="5" Padding="5" TextChanged="SearchTextBox_TextChanged"/>

            <ListBox x:Name="CommandsListBox" Grid.Row="4" Grid.ColumnSpan="2" Margin="5" 
                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                 ScrollViewer.HorizontalScrollBarVisibility="Visible"
                 BorderThickness="1" BorderBrush="DarkSlateBlue" Padding="5"/>

            <Button Content="Delete Command" Grid.Row="5" Grid.Column="0" Margin="5" Click="DeleteCommand_Click" Background="DarkSlateBlue" Foreground="White" Padding="5"/>
            <TextBlock x:Name="DeletingMessage" Grid.Row="5" Grid.Column="1" Margin="5" VerticalAlignment="Center" Foreground="Red"/>
        </Grid>
    </Grid>
</Window>
